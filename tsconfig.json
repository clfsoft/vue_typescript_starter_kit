{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "baseUrl": ".",
    "paths":{
      "@router/*": ["./src/router/*"],
      "@store/*": ["./src/store/*"],
      "@types/*": ["./src/types/*"],
      "@components/*": ["./src/components/*"]
    },
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ]
}
